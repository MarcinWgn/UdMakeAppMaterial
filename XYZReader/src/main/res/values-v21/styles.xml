<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/list_exit</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardTitleStyle">
        <item name="android:textSize">@dimen/cards_title_size</item>
        <item name="android:maxLines">4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">@dimen/cards_padding_min</item>
        <item name="android:paddingLeft">@dimen/cards_padding_def</item>
        <item name="android:paddingRight">@dimen/cards_padding_def</item>
        <item name="android:paddingTop">@dimen/cards_padding_def</item>
    </style>

    <style name="CardSubtitleStyle">
        <item name="android:textSize">@dimen/cards_subtitle_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">@dimen/cards_padding_min</item>
        <item name="android:paddingLeft">@dimen/cards_padding_def</item>
        <item name="android:paddingRight">@dimen/cards_padding_def</item>
    </style>

</resources>